@model Office_Automation.Views.ViewModels.DepartmentViewModel

@{
    ViewBag.Title = "ویرایش دپارتمان";
    string name = Model.Name;
}

<section class="col-8">
    <div class="bg-gray text-center">
        <h4>ویرایش دپارتمان: @name</h4>
        <div class="bg-white container p-3">

            @using (Html.BeginForm("Edit", "Departments", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(t => t.DepartmentId)
                <table class="table">
                    <tr>
                        <td>
                            نام دپارتمان
                        </td>

                        <td>
                            وضعیت
                        </td>

                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </td>



                        <td>
                            <select class="form-control" id="IsActive" name="IsActive">
                                @if (Model.IsActive)
                                {
                                    <option value="true" selected>فعال</option>
                                    <option value="false">مسدود</option>
                                }
                                else
                                {
                                    <option value="true">فعال</option>
                                    <option value="false" selected>مسدود</option>
                                }

                            </select>
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })

                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            اطلاعات تکمیلی دپارتمان
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <textarea class="form-control" id="Info" name="Info" cols="10" rows="6">@Model.Info</textarea>
                            @Html.ValidationMessageFor(model => model.Info, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="ذخیره اطلاعات" class="btn btn-warning" />
                            @Html.ActionLink("بازگشت به لیست", "DepartmentList", null, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                </table>


            }
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
