@model Office_Automation.Views.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "افزودن دپارتمان جدید";
}

<section class="col-8">
    <div class="bg-gray text-center">
        <h4>افزودن دپارتمان جدید</h4>
        <div class="bg-white container">
            <form action="/Departments/Create" method="post" class="form-group">
                <div class="row d-flex justify-content-center mt-2">
                    <div class="col-6 m-3">
                        <input type="number" class="form-control m-1" name="DepartmentId" id="DepartmentId" placeholder="آی دی" />
                        <input type="text" class="form-control m-1" name="Name" id="Name"
                               placeholder="نام دپارتمان">
                        <textarea name="Info" id="Info" class="form-control m-1" cols="10" rows="9"
                                  placeholder="توضیحات تکمیلی مربوط به دپارتمان..."></textarea>
                        <input type="submit" class="btn btn-success m-1" value="ثبت دپارتمان">
                        <input type="reset" class="btn btn-secondary m-1" value="دوباره نویسی">
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
